                  <Insets bottom="20.0" />
               </padding>
            </Label>
            <Label fx:id="asd3" style="-fx-text-fill: lightgrey;" text="Please come back later!">
               <font>
                  <Font name="Vecna" size="25.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button contentDisplay="CENTER" layoutX="297.0" layoutY="410.0" mnemonicParsing="false" onAction="#startGame" styleClass="normalButton" stylesheets="@style.css" text="Start Game" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
         <font>
            <Font name="Vecna" size="25.0" />
         </font></Button>
   </children>
